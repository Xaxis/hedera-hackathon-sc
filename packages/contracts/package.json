{
  "name": "tedera-contracts",
  "version": "1.0.0",
  "description": "Custom smart contracts for Tedera property tokenization platform",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "compile:force": "hardhat compile --force",
